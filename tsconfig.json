{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "typedocOptions": {
    "entryPoints": [
      "src/subject/",
    ],
    "exclude": [
      "**/*.test.ts*",
      "**/*.test.tsx*"
    ],
    "out": "docs"
  }
}